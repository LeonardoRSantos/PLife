<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EA6E">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.cadastro.tarefas.CadastroTarefasActivity">

        <include
            layout="@layout/toolbarcompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_semibold"
            android:gravity="center"
            android:text="Cadastro de Tarefas"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_usuario_shape"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:text="Tarefas:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <Spinner
                    android:id="@+id/spinnerTarefas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_style"
                    android:clickable="true"
                    android:dropDownWidth="match_parent"
                    android:padding="16dp"
                    android:singleLine="false"
                    android:spinnerMode="dialog" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_usuario_shape"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:text="Pontos:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/pontosTarefa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit_text_cadastro"
                    android:ems="10"
                    android:hint="‎"
                    android:inputType="numberDecimal"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_usuario_shape"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:text="Objetivo:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/objetivoTarefas"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_edit_text_cadastro"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="Descrição"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:maxLines="5"
                    android:padding="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_usuario_shape"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:text="Descrição:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/descricao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit_text_cadastro"
                    android:ems="10"
                    android:hint="‎"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="16dp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/btnImagemTaskProduto"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@drawable/novo_produto"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                />


            <Button
                android:id="@+id/btnCadastrarTarefaCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/colorAccent"
                android:padding="18dp"
                android:text="Cadastrar Tarefa"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

