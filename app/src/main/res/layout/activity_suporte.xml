<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EA6E"
    tools:context=".ui.menu.MenuUsuarioActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#409743"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="2dp">


        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="55dp"
            android:background="?attr/colorPrimary"
            android:backgroundTint="#409743"
            android:gravity="center"
            android:text="Suporte"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/LogoPlife"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/prompt"
            app:srcCompat="@drawable/logolife" />

        <TextView
            android:id="@+id/Contato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_phone"
            android:fontFamily="@font/prompt_semibold"
            android:text="Telefone: 4002-8922. "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_email_white_24dp"
            android:fontFamily="@font/prompt_semibold"
            android:text="Email: Plife@gmail.com. "
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>