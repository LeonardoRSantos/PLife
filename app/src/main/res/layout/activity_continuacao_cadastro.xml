<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB2EA6E">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#409743"
        app:theme="@style/Widget.AppCompat.Toolbar" />

    <TextView
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:fontFamily="@font/prompt"
        android:text="Primeiro Acesso"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/voltar2"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF:000.000.000-00"
            android:fontFamily="@font/prompt_semibold"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableEnd="@drawable/ic_email_white_24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/prompt_semibold"
            android:hint="E-mail:"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/VerdeBarra"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome de Preferência "
            android:fontFamily="@font/prompt_semibold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/prompt_semibold"
            android:hint="Nome: "
            android:textSize="15sp"
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O nome de preferência é utilizado em nosso atendimento de comunicações"
            android:textSize="13dp"/>


        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="14"
            android:fontFamily="@font/prompt_semibold"
            android:hint="Telefone:"
            android:inputType="phone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DDD + Número"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableEnd="@drawable/ic_lock_white_24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/prompt_semibold"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/VerdeBarra"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableEnd="@drawable/ic_lock_white_24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/prompt_semibold"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/VerdeBarra"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonCarteira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@drawable/back_ground_button"
            android:drawableRight="@drawable/ic_arrow"
            android:fontFamily="@font/prompt_semibold"
            android:padding="15dp"
            android:text="Finalizar Cadastro"
            android:textColor="@color/TextoBotões"
            android:textSize="16sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>