<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EA6E">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?attr/colorPrimary"
            android:backgroundTint="#409743"
            app:theme="@style/Widget.AppCompat.Toolbar" />

        <TextView
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/prompt"
            android:text="Primeiro Acesso"
            android:textSize="23sp"

        <ImageView
            android:id="@+id/voltar1"
            android:layout_width="53dp"
            android:layout_height="34dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/prompt"
            android:text="Seja bem vindo ao app Plife"
            android:textColor="#D01C3A1D"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/prompt"
            android:text="Por favor insira seu CPF/CNPJ e continue o cadastro."
            android:textColor="#D01C3A1D"
            android:textSize="15sp" />


    </FrameLayout>

    <View
        android:id="@+id/ContainerComponents"
        style="@style/ContainerComponets"
        android:layout_width="366dp"
        android:layout_height="69dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/cpf.cnpj.primeiro"
        style="@style/EditText"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:drawableRight="@drawable/ic_email_white_24dp"
        android:fontFamily="@font/prompt"
        android:hint="CPF/CNPJ"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="135dp"
        android:maxLength="14"/>

    <Button
        android:id="@+id/continuar"
        android:layout_width="322dp"
        android:layout_height="43dp"
        android:background="@drawable/back_ground_button"
        android:fontFamily="@font/calibri"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#D01C3A1D"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="506dp" />

</androidx.constraintlayout.widget.ConstraintLayout>